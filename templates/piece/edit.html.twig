{% extends "base.html.twig" %}
{% block title %} {{title}} {% endblock %}
{% block body %}

<div class="content">
    <div class="card  my-4">
        <div class="card-header">
            <span class="card-title h5">Modifier les informations de la collection</span>
        </div>
        <div class="card-body">

            {{ form_start(form, {'action': path('colections_edit', {'id': colection.id}), 'method': 'POST'}) }}

            {{ form_widget(form) }}

            <button class="btn btn-primary" type="submit">Enregistrer</button>

            <a class="btn btn-secondary" href="{{ path('colections_show', {'id': colection.id}) }}">Annuler</a>

            {{ form_end(form) }}

        </div>
    </div>
</div>
{% endblock %}