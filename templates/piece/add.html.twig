{% extends "base.html.twig" %}
{% block title %} {{title}} {% endblock %}
{% block body %}

{% form_theme form _self %}

<div class="content">
    <div class="card  my-4">
        <div class="card-header">
            <span class="card-title h5">Nouvelle Collection</span>
        </div>
        <div class="card-body">

            {{ form_start(form, {'action': path('colections_add'), 'method': 'POST'}) }}

            {{ form_widget(form) }}

            <button class="btn btn-primary" type="submit">Enregistrer</button>
            <a class="btn btn-secondary" href="{{ path('colections') }}">Annuler</a>

            {{ form_end(form) }}

        </div>
    </div>
</div>
{% endblock %}