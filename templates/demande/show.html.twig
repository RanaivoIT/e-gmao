{% extends "base.html.twig" %}
{% block title %} {{title}} {% endblock %}
{% block body %}

<div class="content">
    <div class="card  my-4">
        <div class="card-header">
            <span class="card-title h5">Voir la demande</span>
        </div>
        <div class="card-body">

            <div class="row d-flex align-items-stretch">
                <div class="col-4 card shadow m-2">
                    
                    <div class="card-body text-center">
                        <img src="{{ '/uploads/pictures/' ~ demande.equipement.colection.picture }}" alt="picture" class="rounded img-fluid" style="width: 200px;">
                        <h5 class="my-3">{{ demande.equipement.name }}</h5>
                        <p class="text-muted mb-1">{{ demande.equipement.colection.maker }}</p>
                        <p class="text-muted mb-1">{{ demande.equipement.colection.origin }}</p> 
                    </div>
                   
                </div>
                <div class="col card shadow m-2">
                    
                    <div class="card-body">
                        <div class="row responsive">
                            <div class="col-sm-3">
                                <p class="mb-0">Date </p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">{{ demande.createdAt | date("d/m/Y H:i:s") }}</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row responsive">
                            <div class="col-sm-3">
                                <p class="mb-0">Site </p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">{{ demande.equipement.site.name }}</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Service</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">{{ demande.equipement.service }}</p>
                            </div>
                        </div>
                        <hr>                  
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Equipement</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">{{ demande.equipement.name }}</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Description</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">{{ demande.description }}</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Etat</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">{{ demande.state }}</p>
                            </div>
                        </div>
                        
                        <hr>

                        <div class="d-flex justify-content-start">
                            {% if is_granted('ROLE_ADMINISTRATEUR') || is_granted('ROLE_OPERATEUR') %}
                                <a href="{{ path('demandes_edit', {'id':demande.id}) }}" type="button" class="btn btn-primary  ms-1">Modifier</a>
                            {% endif %}
                        </div>
                        
                    </div>   
                </div>
            </div>

            

        </div>
    </div>
</div>
{% endblock %}
